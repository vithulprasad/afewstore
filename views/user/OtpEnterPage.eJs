

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

</head>
<body>
    <section class="vh-100 custom">
        <div class="container py-5 h-100">
          <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
              <div class="card bg-light text-black" style="border-radius: 1rem;">
                <div class="card-body p-5 text-center">
                  <div class="mb-md-5 mt-md-4 pb-5" >
                    <h2 class="fw-bold mb-2 text-uppercase">Sign up</h2>
                    <p class="text-white-50 mb-5"></p>
                    <form action="/otpCheck " method="post" autocomplete="off">
                    <div class="form-outline form-white mb-4">
                      <input type="text" name="name" id="typeEmailX" placeholder="Name" required 
                      class="form-control form-control-lg" />
                    </div>
                    <div class="form-outline form-white mb-4">
                      <input type="email" name="email" id="typeEmailX" placeholder="Email" required 
                      class="form-control form-control-lg" />
                    </div>
                    <!-- <div class="form-outline form-white mb-4">
                      <input type="file" name="image" id="typeEmailX" required 
                      class="form-control form-control-lg" />
                    </div> -->
                    <div class="form-outline form-white mb-4">
                      <input type="password" name="password" id="typePasswordX" placeholder="Password" required 
                      class="form-control form-control-lg" />
                    </div>
                    <div class="form-outline form-white mb-4">
                        <input type="number" name="mobile" id="typeEmailX" placeholder="mobile" required 
                        class="form-control form-control-lg" />
                      </div>
                    <button class="btn btn-outline-dark btn-lg px-5" type="submit" value="Register">Signup</button>
                    </form>
                    <div class="mt-4 text-center">
                      <a href="login" style="text-decoration: none;">Already have Account?</a>
                    </div>
                
                    <%   
                    if(typeof message !=='undefined'){
                    %>
                    <p style="color:green;"><%= message %></p>
                    <%
                    }
                    %>    
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
</body>
</html>



