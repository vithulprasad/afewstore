      <div class="row">
        <div class="col-lg-12">
          <div class="order_details_iner"  style="width:1227px">
            <h3>Order Details</h3>
            <table class="table table-borderless">
              <thead>
                <tr>
                  <th >name</th>
                  <th>order payment</th>
                  <th>order details</th>
                  <th>order </th>
                  <th>total price </th>
                  <th > Details</th>
                  <th >cancel </th>
                  <th > Order status</th>
                </tr>
              </thead>
              <% if(orderData.length >0){
                for(let i=orderData.length-1;i>=0;i--){
                  %>
              <tbody>
                <tr style="border: solid 1px;height: 200px;">
                  
         
                  <th style="padding-top: 50px;"  ><span style="margin-top: 100px;color: black;font-weight: bolder;font-size: larger;" ><%=orderData[i].products[0].name%> </span></th>
                  <th style="padding-top: 50px;" ><span style="margin-top: 100px;color: rgb(11, 132, 0);font-weight: bolder;" ><%=orderData[i].orderType%> </span></th>
                  <th style="padding-top: 50px;" ><span style="margin-top: 100px;color: rgb(0, 10, 88);font-weight: bolder; " ><%=orderData[i].status%> </span></th>
                  <th style="padding-top: 50px;" ><span style="margin-top: 100px;" ><%=orderData[i].order_status%> </span></th>
                  <th style="padding-top: 50px;" ><span style="margin-top: 100px;color: rgb(69, 2, 2);font-weight: bolder;" ><%=orderData[i].totalPrice%> </span></th>


                  <th style="padding-top: 50px;">  <a href="/details?id=<%=orderData[i]._id%>"<button type="button" class="btn btn-info">Details</button></th></a>
                  <% if(orderData[i].status=="compleat"){%>
                    <th style="padding-top: 50px;">  <a href="/return?id=<%=orderData[i]._id%>"<button type="button" class="btn btn-warning">return</button></a>

                    <%  }else{ %>
                      <th style="padding-top: 50px;">  <a href="/cancel?id=<%=orderData[i]._id%>"<button type="button" class="btn btn-danger">cancel</button></a>

                      <%}%>
                                                     
                                                                   


                                                                        
                       
                   
                 
                  <th  style="padding-top: 50px; border-radius:solid 1px;"> 
                    <% if(orderData[i].status==="orderd"){%>
                      <span style="height: 30px;" style="color: rgb(0, 0, 0);" class="badge bg-primery">placed order </span>                   
                    <%  } %>
                    <% if(orderData[i].status=="OrderShipped"){%>
                      <span style="height: 30px;" style="color: rgb(255, 255, 255);" class="badge bg-info">OrderShipped</span>                   
                    <%  } %>
                    <% if(orderData[i].status=="Deliverd"){%>
                      <span style="height: 30px;" style="color: rgb(255, 255, 255);" class="badge bg-dark">Deliverd</span>                    
                    <%  } %>
                    <% if(orderData[i].status=="OrderCanceled"){%>
                      <span style="height: 30px;" style="color: rgb(255, 255, 255);" class="badge bg-danger">OrderCanceled</span>                   
                    <%  } %>
                    <% if(orderData[i].status=="compleat"){%>
                      <span style="height: 30px;" style="color: rgb(255, 255, 255);" class="badge bg-success">compleat</span>                    
                    <%  } %>
                    <% if(orderData[i].status=="returnOrder"){%>
                      <span style="height: 30px;" style="color: rgb(255, 255, 255);" class="badge bg-warning">returnOrder</span>                    
                    <%  } %>

                    </th>

                
                  </tr>
              </tbody>
              <%
                }
              } %>
            </table>
